{
    "package": {
        "productName": "mdpkm",
        "version": "1.1.0"
    },
    "build": {
        "distDir": "../build",
        "devPath": "http://localhost:3000",
        "beforeDevCommand": "",
        "beforeBuildCommand": ""
    },
    "tauri": {
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "io.blookers.mdpkm",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "resources": [],
            "externalBin": [],
            "copyright": "",
            "category": "Utility",
            "shortDescription": "Simple instance manager for Minecraft",
            "longDescription": "Simple all-in-one instance manager for Minecraft Java & Bedrock",
            "deb": {
                "depends": []
            },
            "macOS": {
                "frameworks": [],
                "minimumSystemVersion": "",
                "exceptionDomain": "",
                "signingIdentity": null,
                "entitlements": null
            },
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "updater": {
            "active": true,
            "dialog": false,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ4QUU2NEY1Q0NEMUEwNgpSV1FHR3MxY1QrYUtCQTg3ZWVoaHRkZklXbGdNVVRtWlVONldDckxKb3pMSmRQY3RuL0p5cWZ3Ywo=",
            "endpoints": [
                "https://voxelified.com/api/v1/releases/mdpkm/latest"
            ]
        },
        "allowlist": {
            "protocol": {
                "asset": true,
                "assetScope": ["*"]
            },
            "clipboard": {
                "writeText": true
            },
            "window": {
                "close": true,
                "create": true,
                "setFocus": true,
                "maximize": true,
                "minimize": true,
                "unmaximize": true,
                "startDragging": true
            },
            "process": {
                "exit": true,
                "relaunch": true
            },
            "dialog": {
                "open": true,
                "save": true
            },
            "path": {
                "all": true
            },
            "http": {
                "scope": [
                    "https://*/*"
                ],
                "request": true
            },
            "os": {
                "all": true
            },
            "shell": {
                "open": ".*",
                "scope": [
                    {
                        "name": "tar",
                        "cmd": "tar",
                        "args": true
                    }
                ]
            }
        },
        "windows": [
            {
                "title": "mdpkm",
                "width": 1000,
                "height": 600,
                "center": true,
                "focus": true,
                "resizable": true,
                "fullscreen": false,
                "decorations": false,
                "transparent": true
            }
        ],
        "security": {
            "csp": "default-src * 'self' 'unsafe-inline' data:; img-src: 'self' data:; asset: https://asset.localhost; style-src: 'self' 'unsafe-inline'"
        }
    }
}