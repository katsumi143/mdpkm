{
    "package": {
        "productName": "mdpkm",
        "version": "2.0.0"
    },
    "build": {
        "distDir": "../build",
        "devPath": "http://localhost:3000",
        "beforeDevCommand": "",
        "beforeBuildCommand": ""
    },
    "tauri": {
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "io.blookers.mdpkm",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "resources": [],
            "externalBin": [],
            "copyright": "",
            "category": "Utility",
            "shortDescription": "Simple instance manager for Minecraft",
            "longDescription": "Simple all-in-one instance manager for Minecraft Java & Bedrock",
            "deb": {
                "depends": []
            },
            "macOS": {
                "frameworks": [],
                "minimumSystemVersion": "",
                "exceptionDomain": "",
                "signingIdentity": null,
                "entitlements": null
            },
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "updater": {
            "active": true,
            "dialog": false,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ4QUU2NEY1Q0NEMUEwNgpSV1FHR3MxY1QrYUtCQTg3ZWVoaHRkZklXbGdNVVRtWlVONldDckxKb3pMSmRQY3RuL0p5cWZ3Ywo=",
            "endpoints": [
                "https://api.voxelified.com/v1/app/mdpkm/release/latest"
            ]
        },
        "allowlist": {
            "clipboard": {
                "writeText": true
            },
            "window": {
                "close": true,
                "create": true,
                "setFocus": true,
                "maximize": true,
                "minimize": true,
                "unmaximize": true,
                "startDragging": true
            },
			"protocol": {
				"asset": true,
				"assetScope": ["$APPDATA/**"]
			},
            "process": {
                "exit": true
            },
            "dialog": {
                "open": true,
                "save": true
            },
            "path": {
                "all": true
            },
            "http": {
                "scope": [
                    "https://*/*"
                ],
                "request": true
            },
            "os": {
                "all": true
            },
            "shell": {
                "open": ".*",
                "scope": [{
                    "name": "sh",
                    "cmd": "sh",
                    "args": ["-c", { "validator": "\\S+" }]
                }, {
                    "name": "powershell",
                    "cmd": "powershell",
                    "args": [{ "validator": "\\S+" }]
                }],
                "execute": true
            },
            "fs": {
                "all": true,
                "scope": ["$APPDATA", "$APPDATA/**"]
            }
        },
        "security": {
            "csp": {
                "img-src": "'self' data: https: asset: https://asset.localhost",
                "style-src": "'unsafe-inline' 'self'",
                "script-src": "'self' data:",
                "default-src": "'self' data: asset: https://asset.localhost"
            }
        }
    }
}